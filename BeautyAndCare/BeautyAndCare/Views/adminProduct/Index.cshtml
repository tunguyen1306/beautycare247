@model IEnumerable<BeautyAndCare.Models.tblAll>
@using System.Configuration

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm sản phẩm", "Create", "adminProduct", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Hình</th>
                                <th>Mã</th>
                                <th>Tên sản phẩm</th>
                                <th>Danh mục</th>
                                <th>Giá</th>
                                <th>Trạng thái</th>
                                <th>Trạng thái hàng</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td><img width="50" src="@ConfigurationManager.AppSettings["domain"]@item.clPicture.OriginalFilepath.ToString().Split('_')[0]/@item.clPicture.OriginalFilepath" alt="@item.tblProducts.NameProducts" /> </td>
                                    <td>@item.tblProducts.CodeProducts</td>
                                    <td>@item.tblProducts.NameProducts</td>
                                    <td>
                                        @item.tblMenu.NameMenu

                                    </td>
                                    <td>@item.tblProducts.PriceNewProducts</td>
                                    <td>

                                        @if (item.tblProducts.StatusProducts == 1)
                                        {
                                            @("Hoạt động")
                                        }
                                        @if (item.tblProducts.StatusProducts == 0)
                                        {
                                            @("Không hoạt động")
                                        }
                                    </td>
                                    <td>
                                        @item.tblType.NameType

                                    </td>

                                    <td>
                                        <a href="@Url.Action("Edit", "adminProduct", new { id = item.tblProducts.IdProducts })" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("Delete", "adminProduct", new { id = item.tblProducts.IdProducts })" onclick="return confirm('Bạn có muốn xóa sản phẩm không?');" class="btn btn-default btn-xs">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
