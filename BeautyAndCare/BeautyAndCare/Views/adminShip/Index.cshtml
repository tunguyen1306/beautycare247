@model IEnumerable<BeautyAndCare.Models.tblShip>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách bảng giá ship</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm Giá Ship", "Create", "adminShip", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Tỉnh thành </th>
                                <th>Giá</th>
                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>

                                        @item.NameCityShip
                                       
                                    </td>
                                    <td>

                                        @item.PriceShip

                                    </td>
                                      
                                    <td>
                                        <a href="@Url.Action("Edit", "adminShip",new { id=item.idShip})" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("Delete", "adminShip",new { id=item.idShip})" onclick="return confirm('Bạn có muốn xóa sản phẩm không?');" class="btn btn-default btn-xs">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

