@model BeautyAndCare.Models.tblUser

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thêm Từ ngữ</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@using (Html.BeginForm("Create", "adminUser"))
{

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Tên User </label>
                                <input class="form-control" name="NameUser" id="txtNameUser">
                            </div>
                            <div class="form-group">
                                <label>Pass</label>
                                <input class="form-control" name="PassUser" id="txtPassUser">
                            </div>
                            <div class="form-group">
                                <label>Tên</label>
                                <input class="form-control" name="FirtNameUser" id="txtFirtNameUser">
                            </div><div class="form-group">
                                <label>Họ</label>
                                <input class="form-control" name="LastNameUser" id="txtLastNameUser">
                            </div>
                            <div class="form-group">
                                <label>Điểm</label>
                                <input class="form-control" name="TotalPointUser" id="txtTotalPointUser">
                            </div>
                            <div class="form-group">
                                <label>Điện thoại</label>
                                <input class="form-control" name="PhoneUser" id="txtPhoneUser">
                            </div><div class="form-group">
                                <label>Email</label>
                                <input class="form-control" name="EmailUser" id="txtEmailUser">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Pass</label>
                                <input class="form-control" name="PassUser" id="txtPassUser">
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <input class="form-control" name="AddressUser" id="txtAddressUser">
                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @Html.DropDownListFor(model => model.StatusUser, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Hoạt động", Value = "1"},
                                    new SelectListItem {Text = "Không hoạt động", Value = "0"},

                                }, new { @class = "form-control", @name = "StatusUser" })

                            </div>
                            <div class="form-group">
                                <label>Nhận tin</label>

                                @Html.DropDownListFor(model => model.SubscribeUser, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Có", Value = "1"},
                                    new SelectListItem {Text = "Không", Value = "0"},

                                }, new { @class = "form-control", @name = "SubscribeUser" })

                            </div>
                            <div class="form-group">
                                <label>Loại tài khoản</label>

                                @Html.DropDownListFor(model => model.IdTypeUser, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Vip", Value = "1"},
                                    new SelectListItem {Text = "Premium", Value = "2"},
                                     new SelectListItem {Text = "Basic", Value = "3"},
                                }, new { @class = "form-control", @name = "IdTypeUser" })

                            </div>
                            <div class="form-group">
                                <label>Quyền</label>

                                @Html.DropDownListFor(model => model.IdRoleUser, new List<SelectListItem>
                                {

                                    new SelectListItem {Text = "Thường", Value = "1"},
                                    new SelectListItem {Text = "admin", Value = "2"},

                                }, new { @class = "form-control", @name = "IdRoleUser" })

                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Thêm</button>
                                <a href="@Url.Action("Index","adminUser")" class="btn btn-primary">Hủy</a>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->

    <!-- /.row -->
}