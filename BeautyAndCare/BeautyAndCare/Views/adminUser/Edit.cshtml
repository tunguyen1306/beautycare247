@model BeautyAndCare.Models.tblUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sửa </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@using (Html.BeginForm("Edit", "adminUser"))
{
    @Html.HiddenFor(m => m.IdUser)
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Tên User </label>

                                @Html.EditorFor(model => model.NameUser, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NameUser, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Pass</label>

                                @Html.EditorFor(model => model.PassUser, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PassUser, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Tên</label>

                                @Html.EditorFor(model => model.FirtNameUser, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FirtNameUser, "", new { @class = "text-danger" })
                            </div><div class="form-group">
                                <label>Họ</label>

                                @Html.EditorFor(model => model.LastNameUser, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LastNameUser, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Điểm</label>

                                @Html.EditorFor(model => model.TotalPointUser, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TotalPointUser, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Điện thoại</label>

                                @Html.EditorFor(model => model.PhoneUser, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PhoneUser, "", new { @class = "text-danger" })
                            </div><div class="form-group">
                                <label>Email</label>

                                @Html.EditorFor(model => model.EmailUser, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.EmailUser, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Pass</label>

                                @Html.EditorFor(model => model.PassUser, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PassUser, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>

                                @Html.EditorFor(model => model.AddressUser, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AddressUser, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @Html.DropDownListFor(model => model.StatusUser, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Hoạt động", Value = "1"},
                                    new SelectListItem {Text = "Không hoạt động", Value = "0"},

                                }, new { @class = "form-control", @name = "StatusUser" })

                            </div>
                            <div class="form-group">
                                <label>Nhận tin</label>

                                @Html.DropDownListFor(model => model.SubscribeUser, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Có", Value = "1"},
                                    new SelectListItem {Text = "Không", Value = "0"},

                                }, new { @class = "form-control", @name = "SubscribeUser" })

                            </div>
                            <div class="form-group">
                                <label>Loại tài khoản</label>

                                @Html.DropDownListFor(model => model.IdTypeUser, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Vip", Value = "1"},
                                    new SelectListItem {Text = "Premium", Value = "2"},
                                     new SelectListItem {Text = "Basic", Value = "3"},
                                }, new { @class = "form-control", @name = "IdTypeUser" })

                            </div>
                            <div class="form-group">
                                <label>Quyền</label>

                                @Html.DropDownListFor(model => model.IdRoleUser, new List<SelectListItem>
                                {

                                    new SelectListItem {Text = "Thường", Value = "1"},
                                    new SelectListItem {Text = "admin", Value = "2"},

                                }, new { @class = "form-control", @name = "IdRoleUser" })

                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Sửa</button>
                                <a href="@Url.Action("Index","adminUser")" class="btn btn-primary">Hủy</a>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->

    <!-- /.row -->
}