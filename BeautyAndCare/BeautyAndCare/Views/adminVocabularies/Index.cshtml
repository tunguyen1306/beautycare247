@model IEnumerable<BeautyAndCare.Models.tblVocabulary>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách Từ ngữ</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm Từ ngữ", "Create", "adminVocabularies", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                               
                                <th>Key</th>
                                <th>Tên từ ngữ</th>
                                <th>Ngôn ngữ</th>
                             
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.KeyVocabulary</td>
                                    <td>@item.NameVocabulary</td>
                                  
                             
                                    <td>
                                        @if (item.IdLangVocabulary == 1)
                                        {
                                            @("Việt Nam")
                                        }
                                        @if (item.IdLangVocabulary == 2)
                                        {
                                            @("English")
                                        }

                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "adminVocabularies", new { id = item.IdVocabulary})" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("Delete", "adminVocabularies", new { id = item.IdVocabulary })" onclick="return confirm('Bạn có muốn xóa sản phẩm không?');" class="btn btn-default btn-xs">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

