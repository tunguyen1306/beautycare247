@model BeautyAndCare.Models.tblVocabulary

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thêm Từ ngữ</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@using (Html.BeginForm("Create", "adminVocabularies"))
{

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Key</label>
                                <input class="form-control" name="KeyVocabulary" id="txtKeyVocabulary">
                            </div>
                            <div class="form-group">
                                <label>Từ ngữ</label>
                                <input class="form-control" name="NameVocabulary" id="txtNameVocabulary">
                            </div>
                         
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @Html.DropDownListFor(model => model.IdLangVocabulary, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Việt Nam", Value = "1"},
                                    new SelectListItem {Text = "English", Value = "2"},

                                }, new { @class = "form-control", @name = "IdLangVocabulary" })

                            </div>
                          
                           
                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Thêm</button>
                                <a href="@Url.Action("Index","adminVocabularies")" class="btn btn-primary">Hủy</a>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->

    <!-- /.row -->
}