@model BeautyAndCare.Models.tblPromotion

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thêm khuyến mãi</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@using (Html.BeginForm("Create", "Promotions"))
{

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Tên </label>
                                <input class="form-control" name="NameCode" id="txtNameCode">
                            </div>
                            <div class="form-group">
                                <label>Giá</label>
                                <input class="form-control" name="PriceCode" id="txtPriceCode">
                            </div>
                            <div class="form-group">
                                <label>Ngày bất đầu</label>
                                <input class="form-control date" name="DateBeginCode" id="txtDateBeginCode">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Ngày kết thúc</label>
                                <input class="form-control date" name="DateEndCode" id="txtDateEndCode">
                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>

                                @Html.DropDownListFor(model => model.StatusCode, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Hoạt động", Value = "1"},
                                    new SelectListItem {Text = "Không hoạt động", Value = "0"},

                                }, new { @class = "form-control", @name = "StatusCode" })

                            </div>


                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Thêm</button>
                                <a href="@Url.Action("Index","Promotions")" class="btn btn-primary">Hủy</a>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->

    <!-- /.row -->
}