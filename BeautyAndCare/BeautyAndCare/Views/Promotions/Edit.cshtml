@model BeautyAndCare.Models.tblPromotion

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sửa từ ngữ</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@using (Html.BeginForm("Edit", "Promotions"))
{
    @Html.HiddenFor(m => m.IdCode)
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Tên</label>

                                @Html.EditorFor(model => model.NameCode, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NameCode, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Giá</label>
                                @Html.EditorFor(model => model.PriceCode, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PriceCode, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Ngày bất đầu</label>
                                @Html.EditorFor(model => model.DateBeginCode, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DateBeginCode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Ngày kết thúc</label>
                                @Html.EditorFor(model => model.DateEndCode, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DateEndCode, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>
                                @Html.DropDownListFor(model => model.StatusCode, new List<SelectListItem>
                                {
                                    new SelectListItem {Text = "Hoạt động", Value = "1"},
                                    new SelectListItem {Text = "Không hoạt động", Value = "0"},

                                }, new { @class = "form-control", @name = "StatusCode" })
                            </div>


                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Sửa</button>
                                <a href="@Url.Action("Index","Promotions")" class="btn btn-primary">Hủy</a>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->

    <!-- /.row -->
}