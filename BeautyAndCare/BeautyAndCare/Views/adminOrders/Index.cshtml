@model IEnumerable<BeautyAndCare.Models.tblOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayOut.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách đơn hàng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Thêm đơn hàng", "Create", "adminOrders", "", htmlAttributes: new { @class = "btn btn-primary" })
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Giá tiền</th>
                                <th>Điểm</th>
                                <th>Ngày mua</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="">
                                    <td>@item.IdOrder</td>
                                    <td>
                                      
                                        <span class="priceIn_@item.PriceTotal"></span>
                                        <script>
                                                            $(function () {

                                                                $('.priceIn_@item.PriceTotal').text(tien(@item.PriceTotal));
                                                            })
                                        </script>
                                    </td>
                                    <td>@item.PointTotal</td>
                                    <td>@item.DateCreate</td>
                                    <td>
                                        @if (item.StatusOrder == 1)
                                        {
                                            @("Đã giao")
                                        }
                                        @if (item.StatusOrder == 2)
                                        {
                                            @("Đang giao")
                                        }
                                        @if (item.StatusOrder == 3)
                                        {
                                            @("Đã hủy")
                                        }
                                    </td>
                                  
                                   
                                 
                                    <td>
                                        <a href="@Url.Action("Edit", "adminOrders", new { id = item.IdOrder})" class="btn btn-default btn-xs">Sửa</a>
                                        <a href="@Url.Action("Delete", "adminOrders", new { id = item.IdOrder })" onclick="return confirm('Bạn có muốn xóa sản phẩm không?');" class="btn btn-default btn-xs">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

