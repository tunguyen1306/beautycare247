@model BeautyAndCare.Models.tblAll

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayOut.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "adminSavePromotions"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.tblSavePromotion.IdSavePromotion)

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Tên Khách hàng</label>
                                @Html.DropDownListFor(M => M.tblSavePromotion.IdUserSavePromotion, new SelectList(Model.ListUser.ToList(), "IdUser", "NameUser"), htmlAttributes: new { @class = "form-control", @name = "tblUser.IdUser" })
                            </div>
                           


                        </div>
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label>Gói khuyến mãi</label>
                                @Html.DropDownListFor(M => M.tblSavePromotion.IdPromotion, new SelectList(Model.listPromotion.ToList(), "IdCode", "NameCode"), htmlAttributes: new { @class = "form-control", @name = "tblUser.IdUser" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Thêm</button>
                                <a href="@Url.Action("Index","adminSavePromotions")" class="btn btn-primary">Hủy</a>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->

    <!-- /.row -->
}
